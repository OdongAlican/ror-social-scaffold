<section class="user-section">
  <h2><%= "Name: #{@user.name}" %> </h2>
   <% if current_user.friend?(@user)  %>
   <%= button_to 'Remove Friend',friendship_path(user_id: @user.id), method: :delete%>
  <p> You are Friends </p>
  <% elsif current_user.pending_friends.include?(@user) %>
   <p>Request Pending</p>
   <%= button_to 'Cancel Request',cancel_path(user_id: @user.id), method: :post%>

  <% elsif current_user.friend_requests.include?(@user)%>
  <%= button_to 'Confirm',accept_path(user_id: @user.id), method: :post%>
  <%= button_to 'Reject',reject_path(user_id: @user.id), method: :post%>

  <% elsif current_user == @user %>
  <p>This is You</p>
  <% elsif !current_user.friend?(@user) && current_user != @user %>
  <%=  button_to('Add Friend', friendships_path(user_id: @user.id), method: :post) %>
  
  <% end %>
   
  
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
